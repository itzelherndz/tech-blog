<main class="container-fluid">
    <div>
        <h2>New Post</h2>
        <form>
            <fieldset>
                <input id="new-post-title" name="title" placeholder="Title"/>
                <textarea id="new-post-content" name="post-content" placeholder="Write your post here..."></textarea>
                <button id='new-post-submit' type="submit">Post</button> 
            </fieldset>
        </form>
        <br>
        <h2>Recent Posts</h2>
        {{#each posts  as |post|}}
        <article>
            <a href="/posts/{{post.id}}"><h3>{{post.title}}</h3></a>
            <h4>{{post.user.username}}</h4>
            <h5>{{format_date post.createdAt}}</h5>
            <p>{{post.content}}</p>
        </article>
        {{/each}}
        <article>
            
        </article>
    </div>
</main>
<script src="/js/newpost.js"></script>